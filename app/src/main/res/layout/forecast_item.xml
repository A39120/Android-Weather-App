<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forecast_weather_desc"
        android:layout_below="@+id/forecast_item_date"
        android:gravity="bottom|center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forecast_temp_max"
        android:background="@color/maxTempRed"
        android:layout_toEndOf="@+id/forecast_icon"
        android:gravity="bottom|center" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:ems="10"
        android:id="@+id/forecast_item_date"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forecast_other_info"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/forecast_weather_desc" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:srcCompat="?android:attr/windowBackground"
        android:id="@+id/forecast_icon"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"
        android:maxWidth="64dp"
        android:maxHeight="64dp"
        android:minHeight="64dp"
        android:minWidth="64dp"
        android:cropToPadding="false"
        android:contentDescription=""
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/forecast_item_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forecast_temp_min"
        android:background="@color/minTempBlue"
        android:gravity="bottom|center"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/forecast_temp_max" />


</RelativeLayout>